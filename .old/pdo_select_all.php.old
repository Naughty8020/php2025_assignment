<?php
Require 'pdo_connect.php';

// SQL組み立て（プリペア作成）
$sql ="SELECT * FROM users";
$prepare = $con->prepare($sql);

// SQL実行
$prepare->execute(); //SQL文を実行
$results = $prepare->fetchAll(PDO::FETCH_ASSOC); //実行結果を$resultに代入

if ($results) {
    echo "<h2>usersテーブル一覧</h2>";
    echo "<table border='1' cellspacing='0' cellpadding='6'>";
    echo "<tr><th>ID</th><th>PASSWORD</th></tr>";

    foreach ($results as $row) {
        $user_id = htmlspecialchars($row['id'], ENT_QUOTES, 'UTF-8');
        $user_password = htmlspecialchars($row['password'], ENT_QUOTES, 'UTF-8');

        echo "<tr>";
        echo "<td>{$user_id}</td>";
        echo "<td>{$user_password}</td>";
        echo "</tr>";
    }

    echo "</table>";
} else {
    echo "usersテーブルにデータがありません。";
}